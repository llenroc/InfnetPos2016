<storeApps:VisualStateAwarePage
    x:Class="CalculatorApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CalculatorApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:storeApps="using:Microsoft.Practices.Prism.StoreApps"
    xmlns:mvvm="using:Microsoft.Practices.Prism.Mvvm"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock" x:Key="TitleLabelStyle">
                <Setter Property="FontSize" Value="40"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
            <Style TargetType="TextBlock" x:Key="LabelStyle">
                <Setter Property="FontSize" Value="25"/>
            </Style>
            <Style TargetType="Button" x:Key="ButtonStyle">
                <Setter Property="Width" Value="250"/>
                <Setter Property="Height" Value="100"/>
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Margin" Value="25"/>
                <Setter Property="BorderBrush" Value="DarkRed"/>
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="My Calculator"
                   Style="{StaticResource TitleLabelStyle}"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="First value"
                       Style="{StaticResource LabelStyle}"/>
            <TextBox Grid.Row="1"
                     x:Name="TxtNumberOne"
                     Text="{Binding FirstValue, Mode=TwoWay}"/>
            <TextBlock Grid.Row="2"                       
                       Text="Second value"
                       Style="{StaticResource LabelStyle}"/>
            <TextBox Grid.Row="3"
                     Text="{Binding SecondValue, Mode=TwoWay}"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0"
                    x:Name="BtnSum"
                    Style="{StaticResource ButtonStyle}"
                    Content="+"
                    Command="{Binding SumCommand}"/>
            <Button Grid.Row="1"
                    x:Name="BtnSubtract"
                    Style="{StaticResource ButtonStyle}"
                    Content="-" 
                    Command="{Binding SubtractCommand}"/>
            <Button Grid.Row="2"
                    x:Name="BtnMultiply"
                    Style="{StaticResource ButtonStyle}"
                    Content="*"
                    Command="{Binding MultiplyCommand}"/>
            <Button Grid.Row="3"
                    x:Name="BtnDivide"
                    Style="{StaticResource ButtonStyle}"
                    Content="/" 
                    Command="{Binding DivideCommand}"/>
            <TextBlock Grid.Row="4"
                       Text="Try to use the calculator" />
        </Grid>
    </Grid>
</storeApps:VisualStateAwarePage>
